<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../layout/head') %>


</head>

<body>
  <header>

    
    <%- include('../../layout/header') %>
  </header>

  <main>
    <section id="main-contain">

      <div class="result-container">
        <div class="book-contain">
          <img class="book-image" src="<%=book.img_url%>" alt="<%=book.title%>">
          <h3 id="book-title">
            <%=book.title%>
          </h3>
          <h4 id="book-author">
            <%=book.author%>
          </h4>
          <p id="book-isbn">
            <%=book.isbn%>
          </p>
          <p id="book-descrip">
            <%=book.description%>
          </p>


          <div id="two-but-contain">
            
            <form method="POST" action="/populate/<%=book.id %>">
             <button class="button-grey">update details</button>
            </form>
            <form method="POST" action="/delete/<%=book.id %>?_method=DELETE">

              <button class="button-grey" >delete book</button>
             </form>
             


          </div>



        </div>
      </div>


    </section>

  </main>
  <footer>
    <%- include('../../layout/footer') %>
  </footer>

</body>

</html>