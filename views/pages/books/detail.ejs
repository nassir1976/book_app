          <img class="book-image" src="<%=book.img_url%>" alt="<%=book.title%>">
          <h3 id="book-title">
            <%=book.title%>
          </h3>
          <h4 id="book-author">
            <%=book.authors%>
          </h4>
          <p id="book-isbn">
            <%=book.isbn%>
          </p>
          <p id="book-descrip">
            <%=book.description%>
          </p>

          <p>SHELF</p>




        </div>
      </div>


