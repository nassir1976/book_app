<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../layout/head') %>
</head>


<body>

  <header>
    <%- include('../../layout/header') %>

  </header>

  <main>
    <section id="main-contain">
      <form action="/searches" method="POST">
        <input class="box-size" type="text" name="search" placeholder="Enter a title or author" required>
        <fieldset>
          <div id="selec" class="box-size">
            <label for="title">
              <span>Title</span>
              <input type="radio" name="search" value="title" required>
            </label>
          </div>
        </fieldset>
        <fieldset>
          <div id="selec" class="box-size">
            <label for="author">
              <span>Author</span>
              <input type="radio" name="search" value="author" required>
            </label>

          </div>
        </fieldset>
        <button class="button-black" type="submit">Search the Google Books API</button>
      </form>

    </section>
  </main>
</body>

</html>